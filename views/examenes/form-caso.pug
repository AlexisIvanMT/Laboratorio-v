extends ../layout/index

block contenido
    .py-5
        h1.text-2xl.my-10.font-extrabold.text-center.text-green-500 Laboratorio de Patologia veterinaria - Crear
        h2.text-1xl.my-10.font-normal.text-center.text-blue-600 Para poder avanzar y completar los formularios de resultados, primero es necesario llenar el formulario de caso.
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
           div(class="max-w-md mx-auto my-10")
               each error in errores
                  p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded-lg mx-auto max-w-4xl my-10")
          form.space-y-8(method="POST" action="/examenes/form-caso")
               input(type="hidden" name="_csrf" value=csrfToken)
               .space-y-4
                  h3.text-lg.leading-6.font-medium.text-gray-900 Informacion General del Caso
                  p.text-gray-600 AÃ±ade Informacion sobre un caso en especifico
                  
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="caso") Caso
                     input#caso.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese la informacion correspondiente" type = "text" name = "caso")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="medicoVeterinario") Medico Veterinario
                     input#medicoVeterinario.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su nombre" type = "text" name = "medicoVeterinario")

                  div(class="md:flex md:gap-4 space-x-5 md:space-y-0") 
                      
                      div(class="md:w-1/2")
                          label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="usuario") Confirmar Vaterianrio 
                          select#usuario.w-full.px-3.py-2.border.border-gray-300.rounded-mb.placeholder-gray-400(name="usuario") 
                              option(value="") - Veterinario - 
                              each usuario in usuarios
                                  option(value=usuario.id)= usuario.nombre


                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="propietario") Propietario
                     input#propietario.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese el propietario" type = "text" name = "propietario")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="propietario") Direccion
                     input#propietario.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese la direccion del propietario" type = "text" name = "direccion")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="telefono") Telefono
                     input#telefono.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese telefono del propietario" type = "tel" name = "telefono")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="paciente") Paciente 
                     input#paciente.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese el nombre del paciente" type = "text" name = "paciente")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="especie") Especie
                     input#especie.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tipo de especie" type = "text" name = "especie")
                  div 
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="raza") Raza
                     input#raza.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tipo de raza" type = "text" name = "raza")
               
                  div
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="sexo") Sexo
                     div
                     label.mx-4.my-2.text-gray-600
                        input#sexo.h-5.w-5.mr-1.border-gray-300.rounded(type="radio" name="sexo" value="hembra")
                        | Hembra
                     label.mx-4.my-2.text-gray-600
                        input#sexo.h-5.w-5.mr-1.text-gray-400.border-gray-300.rounded(type="radio" name="sexo" value="macho")
                        | Macho
                  
                  div
                     label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="castrado") Castrado
                     div
                     label.mx-5.my-4.text-gray-600
                        input#castrado.h-5.w-5.mr-1.text-gray-400.border-gray-300.rounded(type="radio" name="castrado" value="si")
                        | Si
                     label.mx-5.my-4.text-gray-600
                        input#castrado.h-5.w-5.mr-1.text-gray-500.border-gray-300.rounded(type="radio" name="castrado" value="no")
                        | No

                  input(class = "w-full inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded-lg" type="submit" value="Registrar")
                  

        div.links-wrapper(style="max-width: 2560px; display: flex; justify-content: center;").py-10
            a(href='/examenes/form-hematologia' class='rounded-md py-2 px-10 mx-10 bg-emerald-500 hover:bg-emerald-400 sm:w-auto inline-block').text-sm.font-bold.text-center.text-white.uppercase Hematograma
            a(href='/examenes/form-urianalisis' class='rounded-md py-2 px-10 mx-10 bg-emerald-500 hover:bg-emerald-400 sm:w-auto inline-block').text-sm.font-bold.text-center.text-white.uppercase Urianalisis 
            a(href='/examenes/form-parasitologia' class='rounded-md py-2 px-10 mx-10 bg-emerald-500 hover:bg-emerald-400 sm:w-auto inline-block').text-sm.font-bold.text-center.text-white.uppercase Parasitologia

    

